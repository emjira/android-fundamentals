<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/characterThumbImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:transitionName="characterThumbTransition"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/characterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/characterThumbImageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:transitionName="characterNameTransition"
        tools:text="Bob Name" />

    <TextView
        android:id="@+id/characterDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterNameTextView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/characterThumbImageView"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/desc_character"
        android:visibility="gone"
        android:transitionName="characterDescTransition" />
</RelativeLayout>