<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".FoodDetailFragment">

    <ImageView
        android:id="@+id/foodThumbImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodThumbImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Name" />

    <TextView
        android:id="@+id/foodDescTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/foodNameTextView"
        android:layout_margin="32dp"
        android:text="Desc"
        android:transitionName="characterDescTransition" />

</RelativeLayout>